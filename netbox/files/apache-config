{% from "netbox/map.jinja" import netbox with context %}

<VirtualHost *:80>
    ProxyPreserveHost On

    ServerName {{ netbox.webserver.servername }}

    Alias /static {{ netbox.service.homedir }}/netbox/static

    # Needed to allow token-based API authentication
    WSGIPassAuthorization on

    <Directory {{ netbox.service.homedir }}/netbox/static>
        Options Indexes FollowSymLinks MultiViews
        AllowOverride None
        Require all granted
    </Directory>

    <Location /static>
        ProxyPass !
    </Location>

    RequestHeader set "X-Forwarded-Proto" expr=%{REQUEST_SCHEME}
    ProxyPass / http://{{ netbox.service.gunicorn.bind }}/
    ProxyPassReverse / http://{{ netbox.service.gunicorn.bind }}/
</VirtualHost>
